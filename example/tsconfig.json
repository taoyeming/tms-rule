{
    "compilerOptions": {
      "module": "es2015",
      "target": "es2018",
      "noImplicitAny": false,
      "noImplicitThis": false,
      "sourceMap": true,
      "lib": ["es7", "dom"],
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "allowJs": true,
      "baseUrl": "./",
      "jsx": "react",
      "paths": {
        "*": ["src/components/*", "src/*", "./*"],
        "src": ["src"]
      }
    },
    "exclude": ["node_modules", "public", "ios", "android", "doc"],
    "include": ["src/components", "src"]
  }
  